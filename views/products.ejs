<!DOCTYPE html>
<html>
<head>
   <link rel="icon" type="image/png" href="/favicon.png">
  <title>ðŸ’» MyShop</title>
  <style>
    :root { --bg: #f6f8fb; --card: #ffffff; --accent: #007bff; --accent-dark: #0056b3; --muted: #6b7280; --border: #e5e7eb; }
    * { box-sizing: border-box; }
    body { font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif; background: linear-gradient(135deg, var(--bg) 0%, #f0f4f8 100%); margin: 0; min-height: 100vh; }
    .container { max-width: 1000px; margin: 0 auto; padding: 40px 24px; }
    .header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 12px; }
    .logo { height: 36px; display: block;}
    .center-logo-wrap { text-align: center; margin-bottom: 8px; }
    .topbar { display:flex; justify-content:space-between; align-items:center; padding: 16px 24px; background: transparent; }
    .topbar .brand { display:flex; align-items:center; gap:12px; }
    .site-title { font-size:18px; font-weight:700; color:#0f172a; }
    h2 { margin: 0; font-size: 32px; font-weight: 700; color: #0f172a; letter-spacing: -0.5px; }
    .products { display: grid; grid-template-columns: repeat(auto-fill, minmax(240px, 1fr)); gap: 20px; }
    .card-link { text-decoration: none; color: inherit; }
    .card { background: var(--card); border-radius: 14px; padding: 20px; box-shadow: 0 4px 12px rgba(15,23,42,0.08); display: flex; flex-direction: column; justify-content: space-between; transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1); border: 1px solid rgba(229,231,235,0.5); cursor: pointer; }
    .card:hover { transform: translateY(-6px); box-shadow: 0 16px 32px rgba(15,23,42,0.15); border-color: var(--accent); }
    .card .title { font-weight: 700; font-size: 1.1rem; margin-bottom: 10px; color: #0f172a; }
    .card .price { font-weight: 800; color: var(--accent); font-size: 1.35rem; margin-top: 12px; }
    .meta { color: var(--muted); font-size: 0.85rem; margin-bottom: 12px; letter-spacing: 0.3px; }
    .logout { text-decoration: none; color: #374151; background: var(--card); border: 2px solid var(--border); padding: 10px 18px; border-radius: 10px; font-weight: 600; font-size: 15px; transition: all 0.2s; white-space: nowrap; }
    .logout:hover { background: var(--accent); color: #fff; border-color: var(--accent); transform: translateY(-2px); box-shadow: 0 6px 18px rgba(0,123,255,0.3); }
    .logout:active { transform: translateY(0); }
    .search-container { margin-bottom: 24px; }
    .search-input { width: 100%; max-width: 400px; padding: 12px 16px; border: 2px solid var(--border); border-radius: 10px; font-size: 15px; transition: all 0.2s; background: var(--card); }
    .search-input:focus { outline: none; border-color: var(--accent); box-shadow: 0 0 0 3px rgba(0,123,255,0.1); }
    @media (max-width: 768px) { .container { padding: 24px 16px; } .header { flex-direction: column; gap: 16px; align-items: flex-start; } h2 { font-size: 24px; } .products { grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); gap: 16px; } .search-input { max-width: 100%; } }
  </style>
</head>
<body>
  <div class="container">
    <div class="topbar">
      <div class="brand">
        <img src="/logo.png" alt="Logo" class="logo">
        <span class="site-title">MyShop</span>
      </div>
      <a class="logout" href="/">Logout</a>
    </div>
    <div class="header">
      <h2>Product List</h2>
    </div>
    <div class="search-container">
      <input type="text" id="searchInput" class="search-input" placeholder="Search products...">
    </div>
    <div class="products">
      <% products.forEach(product => { %>
        <a href="/products/<%= product._id %>" class="card-link product-card" data-name="<%= product.name.toLowerCase() %>">
          <div class="card">
            <div>
              <div class="title"><%= product.name %></div>
              <div class="meta"><%= product.description %></div>
            </div>
            <div class="price">$<%= product.price %></div>
          </div>
        </a>
      <% }) %>
    </div>
  </div>

  <script>
    const searchInput = document.getElementById('searchInput');
    const productCards = document.querySelectorAll('.product-card');

    searchInput.addEventListener('input', (e) => {
      const searchTerm = e.target.value.toLowerCase();
      
      productCards.forEach(card => {
        const productName = card.getAttribute('data-name');
        if (productName.includes(searchTerm)) {
          card.style.display = '';
        } else {
          card.style.display = 'none';
        }
      });
    });
  </script>
</body>
</html>
